<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="236dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true"></com.smarteist.autoimageslider.SliderView>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#99000000"
                android:layout_margin="9dp"
                android:padding="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/titleHanhDong"
                    android:text="Phim Hành Động"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/showMoreHanhDong"
                    android:text="Xem Tất Cả >>"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:focusable="true"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ryclerHanhDong"
                android:layout_margin="8dp"
                android:layout_marginLeft="0dp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#99000000"
                android:layout_margin="9dp"
                android:padding="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/titleKinhDi"
                    android:text="Phim Kinh Dị"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/showMoreKinhDi"
                    android:text="Xem Tất Cả >>"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:focusable="true"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rycler"
                android:layout_margin="8dp"
                android:layout_marginLeft="0dp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#99000000"
                android:layout_margin="9dp"
                android:padding="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/titleVoThuat"
                    android:text="Phim Võ Thuật"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/showMoreVoThuat"
                    android:text="Xem Tất Cả >>"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:focusable="true"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ryclerVoThuat"
                android:layout_margin="8dp"
                android:layout_marginLeft="0dp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#99000000"
                android:layout_margin="9dp"
                android:padding="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/titleThanThoai"
                    android:text="Phim Thần Thoại"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/showMoreThanThoai"
                    android:text="Xem Tất Cả >>"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:focusable="true"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ryclerThanThoai"
                android:layout_margin="8dp"
                android:layout_marginLeft="0dp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>