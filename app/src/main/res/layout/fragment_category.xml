<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_action"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Hành Động"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:background="@drawable/btn_action"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/btn_horror"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Kinh Dị"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:background="@drawable/btn_horror"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"/>
        <Button
            android:id="@+id/btn_kungfu"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Võ Thuật"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:background="@drawable/btn_kungfu"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"/>
        <Button
            android:id="@+id/btn_legend"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Thần Thoại"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:background="@drawable/btn_legend"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:id="@+id/grv_category"/>
</LinearLayout>